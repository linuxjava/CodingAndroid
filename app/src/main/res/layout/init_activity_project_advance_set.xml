<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/init_common_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="14dp"
        android:background="@color/init_advance_header_bg"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/init_advance_text_gray"
            android:text="删除项目将会连同其相关的所有数据（包括 issues ,pull requests, 动态等在内）一起删除"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/init_advance_text_red"
            android:text="此操作无法恢复！"
            />
        </LinearLayout>

    <include layout="@layout/divide_15_top_bottom" />

    <Button
        android:id="@+id/deleteBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector"
        android:text="删 除 项 目"
        android:textSize="18sp"
        android:textColor="@color/init_advance_text_red"
        />

    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@drawable/divide_15_top" />

</LinearLayout>